#!/usr/bin/env bash

set -eo pipefail

# Run Terraform commands on the create_state_bucket project in the docker
# container passing our environment variables

docker run --rm -it \
    -u "$(id -u)" \
    -v "${PWD}/create_state_bucket:/app" \
    -w "/app" \
    --env-file ./env.d/development \
    "hashicorp/terraform:light" \
    "$@"
