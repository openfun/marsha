{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "es6",
      "scripthost",
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "plyr": ["types/libs/plyr"],
      "vtt.js": ["types/libs/vtt.js"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "es6",
    "types": ["jest"]
  },
  "include": ["./**/*"]
}
