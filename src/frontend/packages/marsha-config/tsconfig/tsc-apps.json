{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Marsha Apps",
  "extends": "./tsc-base.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "jsx": "react-jsx",
    "lib": ["dom", "dom.iterable", "esnext", "es2015"],
    "module": "esnext",
    "noFallthroughCasesInSwitch": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ES2015",
    "paths": {
      "@lib-video/*": [
        "../../../packages/lib_video/src/*",
        "../../packages/lib_video/src/*"
      ],
      "altamoon-robust-websocket": [
        "../../../packages/lib_video/src/types/libs/altamoon-robust-websocket",
        "../../packages/lib_video/src/types/libs/altamoon-robust-websocket"
      ],
      "@lib-classroom/*": [
        "../../../packages/lib_classroom/src/*",
        "../../packages/lib_classroom/src/*"
      ],
      "@lib-markdown/*": [
        "../../../packages/lib_markdown/src/*",
        "../../packages/lib_markdown/src/*"
      ]
    }
  },
  "exclude": ["node_modules"]
}
