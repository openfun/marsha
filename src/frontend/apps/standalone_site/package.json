{
  "name": "standalone_site",
  "version": "5.8.0",
  "private": true,
  "scripts": {
    "start": "vite",
    "start:custom": "yarn start --port=3001",
    "build": "tsc && vite build",
    "build:dev": "yarn build -m development",
    "build:preview": "yarn build:dev && yarn preview",
    "build:watch": "yarn build:dev --watch",
    "lint": "tsc --noEmit && eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "yarn run lint -- --fix",
    "prettier": "prettier --list-different '**/*.+(ts|tsx|json|js|jsx)' --ignore-path ../../../.prettierignore",
    "preview": "vite preview -m development",
    "test": "cross-env TZ=UTC jest"
  },
  "dependencies": {
    "@openfun/cunningham-react": "*",
    "@tanstack/react-query": "*",
    "@tanstack/react-query-devtools": "*",
    "grommet": "*",
    "grommet-icons": "4.12.1",
    "lib-classroom": "*",
    "lib-common": "*",
    "lib-components": "*",
    "lib-video": "*",
    "lodash": "4.17.21",
    "luxon": "3.5.0",
    "marsha-config": "*",
    "react": "*",
    "react-dom": "*",
    "react-hot-toast": "2.5.1",
    "react-markdown": "9.0.3",
    "react-router-dom": "*",
    "styled-components": "*",
    "zustand": "*"
  },
  "devDependencies": {
    "@babel/core": "7.26.0",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/preset-env": "7.26.0",
    "@babel/preset-typescript": "7.26.0",
    "@testing-library/jest-dom": "*",
    "@testing-library/react": "*",
    "@testing-library/user-event": "*",
    "@types/jest": "29.5.14",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "@vitejs/plugin-react": "4.3.4",
    "babel-jest": "29.7.0",
    "babel-plugin-import-remove-resource-query": "1.0.0",
    "babel-plugin-transform-vite-meta-env": "1.0.3",
    "babel-plugin-transform-vite-meta-glob": "1.1.2",
    "cross-env": "7.0.3",
    "eslint": "*",
    "eslint-config-marsha": "*",
    "fetch-mock": "9.11.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "29.7.0",
    "lib-tests": "*",
    "typescript": "*",
    "vite": "6.0.7",
    "vite-plugin-node-polyfills": "0.22.0",
    "vite-plugin-svgr": "4.3.0",
    "vite-tsconfig-paths": "5.1.4"
  },
  "volta": {
    "node": "20.9.0"
  }
}
