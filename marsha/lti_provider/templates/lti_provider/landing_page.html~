    <script type="text/javascript">
        $(".saveinfo").click(function(event) {
            event.preventDefault();

            if ($("#name").valid() && $("#language").valid() && $("#description").valid()) {
                $.ajax({
                    url: "/lti/addVideo", //this is the submit URL
                    type: 'GET', //or POST
                    data: $('#subscribe-email-form').serialize(),
                    success: function(data) {
                        var upload = $('#upload').val();
                        if (upload == "True") {
                            location.reload();
                        }
                        var name = $('#name').val();
                        var url = "https://www.youtube.com/embed/" + name + "?rel=0&amp;showinfo=0&amp;enablejsapi=1";
                        $('#FrameID').attr("src", url);

                    }


                });
                $('.modal').modal('toggle');
            }
        });
    </script>
